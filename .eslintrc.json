{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "globals": {
    "document": true
  },
  "rules": {
    "max-len": ["error", 120],
    "no-multi-spaces": ["error", { "exceptions": { "ImportDeclaration": true } }],
    "react/require-extension": 0,
    "react/jsx-no-bind": 0,
    "react/forbid-prop-types": 0
  }
}
